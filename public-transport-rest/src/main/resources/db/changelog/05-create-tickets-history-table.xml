<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="Karoly_Froemel" id="5">
        <sql>DROP TYPE IF EXIST history_type</sql>
        <sql>CREATE TYPE history_type AS ENUM ('PURCHASE','REFUND', 'VALIDATE')</sql>
        <createTable tableName="tickets_history">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="history_type" type="history_type">
                <constraints nullable="false"/>
            </column>
            <column name="ticket_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_tickets_history_tickets" references="tickets(id)"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_tickets_history_users" references="users(id)"/>
            </column>
            <column name="account_id" type="UUID"/>
            <column name="account_history_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_tickets_history_accounts_history" references="accounts_history(id)"/>
            </column>
            <column name="created_on" type="DATETIME(2)"/>
        </createTable>

        <rollback>
            <dropTable tableName="tickets_history"/>
        </rollback>
    </changeSet>
</databaseChangeLog>