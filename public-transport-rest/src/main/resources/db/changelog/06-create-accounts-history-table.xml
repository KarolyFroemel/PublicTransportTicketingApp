<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="Karoly_Froemel" id="6">
        <sql>DROP TYPE IF EXIST transaction_type</sql>
        <sql>CREATE TYPE transaction_type AS ENUM ('PURCHASE','REFUND', 'FILL')</sql>
        <createTable tableName="accounts_history">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_accounts_history_accounts" references="accounts(id)"/>
            </column>
            <column name="transaction_type" type="transaction_type">
                <constraints nullable="false"/>
            </column>
            <column name="balance_before" type="BIGINT"/>
            <column name="balance_after" type="BIGINT"/>
            <column name="created_on" type="DATETIME(2)"/>
        </createTable>

        <rollback>
            <dropTable tableName="accounts_history"/>
        </rollback>
    </changeSet>
</databaseChangeLog>