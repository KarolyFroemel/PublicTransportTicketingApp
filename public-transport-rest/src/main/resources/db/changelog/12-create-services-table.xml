<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="Karoly_Froemel" id="11">
        <sql>DROP TYPE IF EXISTS service_type</sql>
        <sql>CREATE TYPE service_type AS ENUM ('BUS','TRAM', 'SUBWAY', 'BOAT')</sql>
        <createTable tableName="services">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(250)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="service_type">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="UUID"/>
            <column name="created_on" type="DATETIME(2)"/>
            <column name="modified_by" type="UUID"/>
            <column name="modified_on" type="DATETIME(2)"/>
        </createTable>
        <rollback>
            <dropTable tableName="services"/>
        </rollback>
    </changeSet>
</databaseChangeLog>